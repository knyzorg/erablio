doctype html
html(lang='en')
  head
    title Hello, world!
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet', href='https://bootswatch.com/4/lux/bootstrap.css', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/admin-panel.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Etudie CA! Admin
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/admin/') Status
          li.nav-item.active
            a.nav-link(href='/admin/modules/') Modules
                span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') Settings
          li.nav-item
            a.nav-link(href='#') Critical
          li.nav-item
            a.nav-link(href='#') Logout
    .container
      nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.second-nav
        a.navbar-brand(href='#') Questions for #{moduleName}
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor02', aria-controls='navbarColor02', aria-expanded='false', aria-label='Toggle navigation', style='')
          span.navbar-toggler-icon
        #navbarColor02.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='/admin/modules/' + moduleName)
                | Browse 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/admin/modules/' + moduleName + '/new') Create New
            li.nav-item
              a.nav-link(href='#') Import
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(placeholder='Search', type='text')
      each question in questions
        .module.card.text-white.bg-primary
            .row
              .col-md-12.content
                h2.text-center=question.id + ": " + question.title
                a(href='/admin/modules/' + moduleName + '/edit/' + question.id).btn.btn-secondary Edit
                button.btn.btn-secondary Open
                a(href='/admin/modules/' + moduleName + '/delete/' + question.id).btn.btn-secondary Delete
                
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js', integrity='sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js', integrity='sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ', crossorigin='anonymous')
    script(src='/js/admin/adminExtras.js')