doctype html
html(lang='en')
  head
    title Hello, world!
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet', href='https://bootswatch.com/4/lux/bootstrap.css', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/admin-panel.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Etudie CA! Admin
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/admin/') Status
          li.nav-item.active
            a.nav-link(href='/admin/modules/') Modules
                span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') Settings
          li.nav-item
            a.nav-link(href='#') Critical
          li.nav-item
            a.nav-link(href='#') Logout
    .container
      nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.second-nav
        a.navbar-brand(href='#') Questions for #{question.module}
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor02', aria-controls='navbarColor02', aria-expanded='false', aria-label='Toggle navigation', style='')
          span.navbar-toggler-icon
        #navbarColor02.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/admin/modules/' + question.module)
                | Browse 
            li.nav-item.active
              a.nav-link(href='/admin/modules/' + question.module + '/new') Create New
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='#') Import
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(placeholder='Search', type='text')
      .module.text-white.bg-primary
        .col-sm-12
          .row
            form(method='POST', action="/admin/modules/" + question.module + "/new")
              .form-group
                label(for='title') Title: 
                input.form-control(type='text',value=question.title, name='title', placeholder='Enter title')
              .row.mx-auto
                .form-group.col-md-6
                    label(for='id') Unique ID
                    input#id.form-control(value=question.id, type='text', name='id', placeholder='Enter ID')
                    small.form-text.text-muted This ID is purely functional. Using an existing one will overwrite it.
                .form-group.col-md-6
                    label(for='type') Type: 
                    input.form-control(type='number', value=question.type, name='type', placeholder='Enter tags')
                    small.form-text.text-muted Enter type number
              fieldset.row.mx-auto
                legend Explanations
                .form-group.col-md-6
                    label(for='wrong') Explain Wrong
                    textarea(rows="9", name="wrong").form-control=question.explain.wrong
                    small.form-text.text-muted If wrong, give explanation. Markdown is allowed.
                .form-group.col-md-6
                    label(for='right') Explain Right
                    textarea(rows="9", name="right").form-control=question.explain.right
                    small.form-text.text-muted If right, give explanation. Markdown is allowed. If empty, will fallback to wrong explanation.
              fieldset#answers(data-count=question.answers.length)
                legend Answer
                each answer, index in question.answers
                  .row
                    .form-group.col-md-6
                        label(for='answer' + index) Answer Text
                        input.form-control(name="answer" + index, value=answer.text).form-contro
                    .form-group.col-md-4
                        label(for='code' + index) Answer Code
                        input(type="number", name="code" + index, value=answer.code).form-control
                    .form-group.col-md-2
                        input.btn.btn-secondary.form-control(type="button", value="remove").removeAnswer
              input#addAnswer.btn.btn-primary(type="button", value="Add Answer")
              button.btn.btn-secondary(type='submit') Save
        // Optional JavaScript
        // jQuery first, then Popper.js, then Bootstrap JS
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js', integrity='sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js', integrity='sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ', crossorigin='anonymous')
        script(src='/js/admin/adminExtras.js')
